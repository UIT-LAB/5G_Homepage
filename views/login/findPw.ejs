        <style>
            @font-face {
                font-family: 'NanumBarunGothic';
                font-style: normal;
                font-weight: 700;
                src: url('//cdn.jsdelivr.net/font-nanumlight/1.0/NanumBarunGothicWebBold.eot');
                src: url('//cdn.jsdelivr.net/font-nanumlight/1.0/NanumBarunGothicWebBold.eot?#iefix') format('embedded-opentype'), url('//cdn.jsdelivr.net/font-nanumlight/1.0/NanumBarunGothicWebBold.woff') format('woff'), url('//cdn.jsdelivr.net/font-nanumlight/1.0/NanumBarunGothicWebBold.ttf') format('truetype')
            }
            body{
                font-family: 'NanumBarunGothic';
            }
        </style>
    </head>
    <body>
        <div class="container">
            <form action="./changePw" method="POST" class="form-signin" onsubmit="return pwfind();">
                <div class="fs-1 pt-5 mt-5 text-start">비밀번호 찾기</div>
                <hr class="border border-5 border-dark">

                <div class=" pt-5">
                    <table class="table table-borderless"> 
                        <tr>
                            <td >아이디</td>
                            <th>
                                <input type="text" id="input_id" name="input_id" class="form-control shadow-sm" placeholder="id">
                            </th>
                        </tr>
                        <tr>
                            <td>이메일</td>
                            <th>
                                <input type="email" id="input_email" name="input_email" class="form-control shadow-sm" placeholder="email">
                            </th>
                        </tr>
                    </table>
                </div>
                <div class="text-center mt-5">
                    <button class="btn btn-dark btn-block" type="submit">검색</button>
                </div>
            </form>   
        </div>
    </body>
    
</html>
<script>
    function pwfind(){
        if($("#input_id").val()==""){
        alert("아이디를 입력하여 주세요");
        return false;
        }

        if($("#input_email").val()==""){
        alert("이메일을 입력하여 주세요");
        return false;
        }
    }
</script>