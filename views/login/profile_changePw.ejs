    <style>
        .subtitle{
            margin-top: 25px;
            margin-bottom: 60px;
            text-align: center;
            font-size: 28px;
            font-weight: 900;
        }    
        .form-pwcheck input[type=password]{
            width: 70%;
            border-radius: 10px;
        }
        .btn{
            width: 150px;
            height: 70px;
            font-size: 25px;
        }
    </style>
