<script>
    function pwfind(){
        if($("#input_id").val()==""){
        alert("아이디를 입력하여 주세요");
        return false;
        }

        if($("#input_email").val()==""){
        alert("이메일을 입력하여 주세요");
        return false;
        }
    }
</script>