<!DOCTYPE html>

<head>
    <link href="https://cdn.discordapp.com/attachments/751431280519807068/800629207469785128/5g.png" rel="shortcut icon"
        type="images/x-icon">

    <style>
        .table-hover tbody tr {
            cursor: pointer;
        }

        th{
            background-color: lightgray !important;
        }

        a:link {
            color: black;
            text-decoration: none;
        }

        a:visited {
            color: black;
            text-decoration: none;
        }

        a:hover {
            color: black;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <header>
        <% include ../include/header %>
    </header>
    <div>
        <img src="/images/paper.jpg" class="w-100" style="height: 400px;" alt="0">
    </div>
    <div class="container p-3">
        <div class="row mt-5 mb-5 p-5">
            <% include ../include/research_nav %>
            <div class="col-lg-12 col-xl-10 p-4">
                    <% include ../include/research_label %>
                    <form action = "/research/thesis/write" method = "POST">
                        <div class="border border-2 p-4">
                            <h4>
                                <input type="text" name="thesis_name">
                            </h4>
                            
                            <div class="row mt-4">
                                <div class="col text-center p-1">
                                    <table class="table table-responsive-sm table-bordered " style="width: 100%;">
                                        <tbody>
                                            <tr>
                                                <th>사업연도</th>
                                                <td scope="row">
                                                    <input style="width: 50%; border: none" type = "text" name = "business_year"></input>
                                                </td>
                                                <th>대학명</th>
                                                <td>
                                                    <input tpye = "text" name = "univ_name">
                                                </td>
                                                <th>학과</th>
                                                <td>
                                                    <input type = "text" name = "department">
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">SCI구분</th>
                                                <td>
                                                    <input type = "text" name = "SCI_division">
                                                </td>
                                                <th>논문구분</th>
                                                <td colspan="3">
                                                    <input type = "text" name = "thesis_division">
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">주저자명</th>
                                                <td>
                                                    <input type = "text" name = "lead_author_name">
                                                </td>
                                                <th scope="row">공동저자명</th>
                                                <td colspan="3">
                                                    <input type = "text" name = "co_author_name">
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">학술지명</th>
                                                <td class="align-middle" colspan="5">
                                                    <input type = "text" name = "journal_name">
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>볼륨번호</th>
                                                <td>
                                                    <input type = "text" name = "volume_num">
                                                </td>
                                                <th>학술지 출판일자</th>
                                                <td>
                                                    <input type = "text" name = "journal_date">
                                                </td>
                                                <th>학술지 임팩트펙터</th>
                                                <td>
                                                    <input type = "text" name = "journal_impact_factor">
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">기여율</th>
                                                <td>
                                                    <input type = "text" name = "contribution_rate">
                                                </td>
                                                <th>국제 표준번호</th>
                                                <td>
                                                    <input type = "text" name = "isbn">
                                                </td>
                                                <th>피인용건수</th>
                                                <td>
                                                    <input type = "text" name = "citation">
                                                </td>
                                            </tr>
                                            <tr class="align-middle">
                                                <th scope="row">ACK수</th>
                                                <td>
                                                    <input type = "text" name = "ack">
                                                </td>
                                                <th>학술대회명</th>
                                                <td colspan="3">
                                                    <input type = "text" name = "conference_name">
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">학술대회<br>발표일</th>
                                                <td colspan="2"  class="align-middle">
                                                    <input type = "text" name = "conference_date">
                                                </td>
                                                <th>학술대회<br>개최국</th>
                                                <td colspan="2" class="align-middle">
                                                    <input type = "text" name = "conference_country">
                                                </td>
                                            </tr>
                                            <tr>
                                                <th colspan="6">초록</th>
                                            </tr>
                                            <tr>
                                                <td colspan="6" class="text-start">
                                                    <input type = "text" name = "abstracts">
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <input type = "submit" value = "작성">
                    </form>
                </div>
        </div>
    </div>
    <footer>
        <% include ../include/footer %>
    </footer>
</body>

</html>