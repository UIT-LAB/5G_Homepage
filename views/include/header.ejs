</html>
<script>
    function profileopen() {
        var popup=window.open('/profile', '개인 정보', 'width=600px, height=600px, scrollbars=no, toolbar=no, location = no, resizable=no, top=0, left=50');
    }

    function mouse_over(){
        var user_info = document.getElementById("user_info")
        user_info.src="/images/user_fill.png"
    }

    function mouse_out(){
        var user_info = document.getElementById("user_info")
        user_info.src="/images/user.png"
    }
</script>
