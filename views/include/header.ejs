    <title>5G 사업단</title>
    
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark" id="top">
        <div class="container-fluid container">
            <a class="navbar-brand" href="/">
                <img src="/images/5g.png" width="30" height="30">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav"> 
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/intro" id="a">소개</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/member/1">멤버</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/research/thesis/1">연구성과</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/gallery/1">갤러리</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/board/notice/1">게시판</a>
                    </li>                    
                </ul>
                <form class="d-flex">
                    <%if(name){ %>
                        <span class="text-white m-2 align-middle"><%= name %>님 환영합니다!</span>
                        <a class="nav-link" href="#" onclick="profileopen()" onmouseover="mouse_over()" onmouseout="mouse_out()"><img src="/images/user.png" alt="" width="30" id="user_info"></a>
                        <a href="/login/logout"><input class="btn form-control btn-outline-light" type="button" value="Logout"></a>
                    <%}
                    else{%>
                        <a href="/login"><input class="m-2 btn form-control btn-outline-light" type="button" value="Login"></a>
                    <%}%>
                </form>
                
            </div>
        </div>
    </nav>
</body>
</html>
<script>
    function profileopen() {
        var popup=window.open('/profile', '개인 정보', 'width=600px, height=600px, scrollbars=no, toolbar=no,resizeable=0, top=150, left=650');
    }

    function mouse_over(){
        var user_info = document.getElementById("user_info")
        user_info.src="/images/user_fill.png"
    }

    function mouse_out(){
        var user_info = document.getElementById("user_info")
        user_info.src="/images/user.png"
    }
</script>
